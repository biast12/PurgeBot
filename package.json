{
  "name": "purgebot",
  "version": "1.0.0",
  "description": "A Discord bot for efficient message purging with improved architecture",
  "main": "dist/bot.js",
  "scripts": {
    "build": "tsc",
    "start": "ts-node src/bot.ts",
    "start:prod": "node dist/bot.js",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "rebuild": "npm run clean && npm run build",
    "register": "ts-node src/utils/registerCommands.ts"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "discord.js": "^14.25.1",
    "dotenv": "^17.3.1",
    "mongodb": "^7.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/biast12/PurgeBot"
  },
  "keywords": [
    "discord",
    "bot",
    "purge",
    "moderation"
  ],
  "author": "biast12",
  "license": "MIT"
}
